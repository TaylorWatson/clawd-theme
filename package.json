{
  "name": "@twatson/clawd-theme",
  "version": "1.0.0",
  "type": "module",
  "description": "Customize Clawd mascot appearance with seasonal themes for Claude Code",
  "main": "dist/bundle.js",
  "bin": {
    "clawd-theme": "dist/bundle.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/cli.js --bundle --platform=node --target=node18 --outfile=dist/bundle.js --format=esm",
    "dev": "tsc --watch",
    "start": "node dist/bundle.js",
    "test": "vitest"
  },
  "keywords": [
    "claude-code",
    "plugin",
    "theme",
    "mascot",
    "clawd"
  ],
  "author": "Taylor Watson <taylor.watson@soti.net>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "react": "^18.2.0",
    "react-devtools-core": "^4.28.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
